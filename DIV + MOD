
#include <bits/stdc++.h>
using namespace std;
#define int long long int


signed  main() {

    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    int t=1;
    cin>>t;
    while(t--){
        int l,r,a;
        cin>>l>>r>>a;

        if(l/a == r/a){
            cout<<r/a+r%a<<endl;
        }  

        else{
            cout<<max(r/a+r%a, r/a-1 + a-1)<<endl;
        }     
        
    }
   
   return 0;
}
